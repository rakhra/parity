<!--main-->
<div class="container" id="main">
  <div class="row">
  
  <div class="col-md-12">
    <h2>{{event.name}}</h2>
    <hr/>
  </div>

  
  <div class="col-md-8">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h4>What is this event about?</h4>
        </div>
        <div class="panel-body">
          {{{event.description}}}
        </div>
      </div> 

      {{#if event.host}}
        <div class="panel panel-default">
          <div class="panel-heading">
            <h4>About the speaker</h4>
          </div>
          <div class="panel-body">
            {{{event.host}}}
          </div>
        </div> 
      {{/if}}
    </div>

    <div class="col-md-4">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h4>Dates & Location</h4>
        </div>
        <div class="panel-body">
          <div class="clearfix"></div>
          <div class="input-group">
            <div class="input-group-btn">
          {{#if event.register}}
            <button class="btn btn-alert" onClick="removeImpression('{{event.register._id}}')">Unregister</button>
          {{else}}
            <button class="btn btn-primary" onClick="impression('{{event.type}}','{{event._id}}', 'register')">Register Me</button>
          {{/if}}
            </div>
          </div>
          <hr>
          <ul class="list-unstyled">
            {{#each event.dates}}
            <li>
              <p>{{dateFormat start "ddd, MMMM Do, h:mma"}} - {{duration start end}}</p>
            </li>
            {{/each}}
          </ul>
          <hr>
          {{event.location}}
        </div>
      </div>
    </div>
  </div>
</div>

